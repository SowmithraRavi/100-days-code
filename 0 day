#Program 1
a=int(input("Enter the first number:"))
b=int(input("Enter the second number:"))
c=int(input("Enter the third number:"))
print(a+b)
print(a+c)
print(b+c)

#Program 2
n=int(input("Enter the number :"))
if (n%2)==0 :
    print(n,"the given number is even number ")
else :
    print(n,"the given number is odd number ")

#Program 3
pi=3.14
r=float(input("Enter the value :))
print("Area",pi*r*r)
